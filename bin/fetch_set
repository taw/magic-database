#!/usr/bin/env ruby

require "set"
require_relative "../lib/magic_database"

ARGV.each do |set_name|
  Gatherer.checklist_for_set(set_name).each do |card_name, first_multiverse_id, number_of_variants|
    GathererDetailsPage.new(first_multiverse_id).doc # card_info
    GathererLanguagesPage.new(first_multiverse_id).doc
  end
end
